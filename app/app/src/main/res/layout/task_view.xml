<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:padding="18dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/taskLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/task_style">

        <qihaoooooo.kyoho.view.SquareImageView
            android:id="@+id/taskIcon"
            android:layout_width="@dimen/taskIconHeight"
            android:layout_height="@dimen/taskIconHeight"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/clipboard"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/taskIconHeight"
            android:layout_weight="2"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_margin="16dp">

            <qihaoooooo.kyoho.view.PixelTextView
                android:id="@+id/taskDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="Task description"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/taskDescSize" />

            <qihaoooooo.kyoho.view.PixelTextView
                android:id="@+id/taskTimeLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text="420 minutes left"
                android:textColor="@color/textGray"
                android:textSize="@dimen/taskTimeLeftSize" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <qihaoooooo.kyoho.view.SquareImageView
                android:id="@+id/taskDoneCheck"
                android:layout_width="@dimen/taskDoneWidth"
                android:layout_height="@dimen/taskDoneWidth"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/checkmark" />

            <qihaoooooo.kyoho.view.PixelTextView
                android:id="@+id/taskAttackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingTop="4dp"
                android:textSize="18dp"
                android:textColor="#AA2222"
                android:text="1"/>

            <qihaoooooo.kyoho.view.PixelTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AA2222"
                android:text="ATK"
                android:textSize="10dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>